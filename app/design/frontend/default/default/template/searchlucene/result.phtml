<h1 class="page-head"><?php echo $this->__('Search Results') ?></h1>
<p><?php echo $this->__("Search Results for: '%s'", $query) ?></p>
<?php if(!empty($hits)): ?>
    <?php foreach($hits as $hit): ?>
        <?php echo $this->__('Score: %s', round($hit->score,3)) ?><br/>
        <?php echo $this->__('SKU: %s', $hit->sku) ?><br/>
        <?php echo $this->__('Manufacturer: %s', $hit->manufacturer) ?><br/>
        <?php echo $this->__('Shoe Type: %s', $hit->shoe_type) ?><br/>
        <a href="<?php echo $hit->url ?>"><?php echo $hit->name ?></a><br/>
     <?php endforeach; ?>
<?php else: ?>
    <p><?php echo $this->__("There are no products under search term '%s'", $query) ?></p>
<?php endif; ?>
